<UserControl
    x:Class="AppX.ButtonFavorite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Button x:ConnectionId='1' Background="Transparent" x:Name="favoriteBtn" x:FieldModifier="public">
        <Grid CornerRadius="8" Background="#217024"
              Padding="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="8*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <SymbolIcon x:ConnectionId='3' x:FieldModifier="public"
                            Foreground="#fff"
                            x:Name="siFavorite"
                            ></SymbolIcon>
            </Grid>
            <Grid Grid.Column="1"
                  VerticalAlignment="Center"
                  Margin="12,2,0,0">
                <TextBlock x:ConnectionId='2' Foreground="#fff" FontFamily="Roboto Condensed Light"
                           FontWeight="SemiBold"
                           x:Name="tblFavorite"
                           x:FieldModifier="public"
                           FontSize="15"></TextBlock>
            </Grid>
        </Grid>
    </Button>
</UserControl>

